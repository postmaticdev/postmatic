                <div>
                  <label
                    for="givenName"
                    class="block text-sm font-medium text-gray-700"
                    >Nama depan</label
                  >
                  <input
                    id="givenName"
                    name="givenName"
                    type="text"
                    value="<%= typeof givenName !== 'undefined' ? givenName : '' %>"
                    required
                    autocomplete="given-name"
                    class="mt-1 block w-full rounded-xl border <%= errors?.givenName ? 'border-red-300' : 'border-gray-300' %> bg-white px-3 py-2 shadow-sm ring-brand"
                    aria-invalid="<%= errors?.givenName ? 'true' : 'false' %>"
                    aria-describedby="givenName-error"
                    placeholder="John"
                  />
                  <p
                    id="givenName-error"
                    class="mt-2 text-xs text-red-600 <%= errors?.givenName ? '' : 'hidden' %>"
                  >
                    <%= errors?.givenName || '' %>
                  </p>
                </div>

                <div>
                  <label
                    for="familyName"
                    class="block text-sm font-medium text-gray-700"
                    >Nama belakang</label
                  >
                  <input
                    id="familyName"
                    name="familyName"
                    type="text"
                    value="<%= typeof familyName !== 'undefined' ? familyName : '' %>"
                    required
                    autocomplete="family-name"
                    class="mt-1 block w-full rounded-xl border <%= errors?.familyName ? 'border-red-300' : 'border-gray-300' %> bg-white px-3 py-2 shadow-sm ring-brand"
                    aria-invalid="<%= errors?.familyName ? 'true' : 'false' %>"
                    aria-describedby="familyName-error"
                    placeholder="Doe"
                  />
                  <p
                    id="familyName-error"
                    class="mt-2 text-xs text-red-600 <%= errors?.familyName ? '' : 'hidden' %>"
                  >
                    <%= errors?.familyName || '' %>
                  </p>
                </div>
              </div>

              <div>
                <label
                  for="email"
                  class="block text-sm font-medium text-gray-700"
                  >Alamat email</label
                >
                <input
                  id="email"
                  name="email"
                  type="email"
                  value="<%= typeof email !== 'undefined' ? email : '' %>"
                  required
                  autocomplete="email"
                  class="mt-1 block w-full rounded-xl border <%= errors?.email ? 'border-red-300' : 'border-gray-300' %> bg-white px-3 py-2 shadow-sm ring-brand"
                  aria-invalid="<%= errors?.email ? 'true' : 'false' %>"
                  aria-describedby="email-error"
                  placeholder="user@example.com"
                />
                <p
                  id="email-error"
                  class="mt-2 text-xs text-red-600 <%= errors?.email ? '' : 'hidden' %>"
                >
                  <%= errors?.email || '' %>
                </p>
              </div>

              <div class="grid grid-cols-1 sm:grid-cols-2 gap-3">
                <div>
                  <label
                    for="password"
                    class="block text-sm font-medium text-gray-700"
                    >Kata sandi</label
                  >
