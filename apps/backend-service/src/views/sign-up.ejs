            </p>
          </div>

          <!-- Footer -->
          <footer class="mt-6 text-center text-xs text-gray-500">
            <a
              class="hover:underline"
              href="<%= LANDINGPAGE_URL %>/cookie-policy"
              >Kebijakan Cookie</a
            >
            ·
            <a
              class="hover:underline"
              href="<%= LANDINGPAGE_URL %>/data-deletion"
              >Penghapusan Data</a
            >
            ·
            <a
              class="hover:underline"
              href="<%= LANDINGPAGE_URL %>/privacy-policy"
              >Kebijakan Privasi</a
            >
            ·
            <a
              class="hover:underline"
              href="<%= LANDINGPAGE_URL %>/terms-of-service"
              >Syarat Layanan</a
            >
          </footer>
        </div>
      </main>
    </div>

    <!-- Script 1: Toggle password -->
    <script nonce="<%= cspNonce %>">
      (function () {
        const labels = {
          show: "Tampilkan kata sandi",
          hide: "Sembunyikan kata sandi",
        };
        document.querySelectorAll("[data-toggle-password]").forEach((btn) => {
          const targetId = btn.getAttribute("data-target");
          const input = document.getElementById(targetId);
          if (!input) return;
          btn.addEventListener("click", () => {
            input.type = input.type === "password" ? "text" : "password";
            const visible = input.type === "text";
            btn.setAttribute("aria-pressed", String(visible));
            btn.setAttribute("aria-label", visible ? labels.hide : labels.show);
            btn.title = visible ? labels.hide : labels.show;
            const eye = btn.querySelector(".icon-eye");
            const eyeOff = btn.querySelector(".icon-eye-off");
            if (eye && eyeOff) {
              eye.classList.toggle("hidden", visible);
              eyeOff.classList.toggle("hidden", !visible);
            }
          });
        });
      })();
    </script>

    <!-- Script 1.5: Turnstile callbacks (UX opsional) -->
    <!-- Script 1.5: Turnstile callbacks + GATE (REPLACE THIS BLOCK) -->
    <script nonce="<%= cspNonce %>">
      (function () {
        var errEl = document.getElementById("captcha-error");
        var statEl = document.getElementById("captcha-status");

        function showErr(msg) {
          if (statEl) { statEl.textContent = ""; statEl.classList.add("hidden"); }
          if (errEl) { errEl.textContent = msg || "Captcha tidak valid."; errEl.classList.remove("hidden"); }
        }
        function showOk(msg) {
          if (errEl) { errEl.textContent = ""; errEl.classList.add("hidden"); }
          if (statEl) { statEl.textContent = msg || "Captcha terverifikasi."; statEl.classList.remove("hidden"); }
        }

        // === Gate flags (sinkron dengan halaman login) ===
        window.__PM_TS_ENABLED__ = <%- JSON.stringify(!!TURNSTILE_ENABLED) %>;
        window.__PM_TS_OK__ = !window.__PM_TS_ENABLED__; // kalau tidak enable, anggap OK

        function recomputeIfReady(){
          if (typeof window.__pmRecompute === "function") window.__pmRecompute();
        }

        // Dipanggil oleh widget
        window.pmOnTsOk = function () { window.__PM_TS_OK__ = true;  showOk();  recomputeIfReady(); };
        window.pmOnTsErr = function () { window.__PM_TS_OK__ = false; showErr("Captcha gagal dimuat. Silakan muat ulang atau coba lagi."); recomputeIfReady(); };
        window.pmOnTsExp = function () { window.__PM_TS_OK__ = false; showErr("Captcha kedaluwarsa. Silakan selesaikan ulang captcha."); recomputeIfReady(); };

        // Safety: jika 6 detik tidak ada token, tampilkan pesan
        if (window.__PM_TS_ENABLED__) {
          setTimeout(function () {
            if (!window.__PM_TS_OK__) {
              showErr("Captcha belum diverifikasi. Selesaikan captcha untuk melanjutkan.");
            }
          }, 6000);
        }
      })();
    </script>

    <!-- Script 2: Zod + validasi + loading + password strength -->
    <script src="https://cdn.jsdelivr.net/npm/zod@3.23.8/lib/index.umd.min.js"></script>
    <script nonce="<%= cspNonce %>">
      (function () {
        const form = document.getElementById("signupForm");
        if (!form) return;

        const btn = document.getElementById("signupSubmitBtn");
        const spinner = btn ? btn.querySelector(".spinner") : null;
        const label = btn ? btn.querySelector(".btn-label") : null;
        const loadingText =
          (btn && btn.getAttribute("data-loading-text")) || "Membuat akun...";

        // ===== [NEW] CAPTCHA GATE: kunci tombol sampai verifikasi =====
        function setBtn(disabled) {
          if (!btn) return;
          btn.disabled = disabled;
          btn.classList.toggle("opacity-75", disabled);
          btn.classList.toggle("cursor-not-allowed", disabled);
          if (disabled) btn.setAttribute("aria-disabled", "true");
          else btn.removeAttribute("aria-disabled");
        }
        function recomputeDisabled() {
          var lockByCaptcha =
            !!window.__PM_TS_ENABLED__ && !window.__PM_TS_OK__;
          var disabled = lockByCaptcha;
          setBtn(disabled);
          window.__PM_CAN_SUBMIT__ = !disabled;
        }
        // expose supaya Script 1.5 bisa memicu ulang
        window.__pmRecompute = recomputeDisabled;
        // initial state
        recomputeDisabled();

        const givenName = document.getElementById("givenName");
        const familyName = document.getElementById("familyName");
        const email = document.getElementById("email");
        const password = document.getElementById("password");
        const confirmPassword = document.getElementById("confirmPassword");

        const errGiven = document.getElementById("givenName-error");
        const errFamily = document.getElementById("familyName-error");
        const errEmail = document.getElementById("email-error");
        const errPass = document.getElementById("password-error");
        const errCPass = document.getElementById("confirmPassword-error");

        const strengthWrap = document.getElementById("pwd-strength");
        const strengthSteps = strengthWrap
          ? Array.from(strengthWrap.querySelectorAll(".step"))
          : [];
        const strengthLabel = document.getElementById("pwd-strength-label");
        const weaknessList = document.getElementById("pwd-weakness-list");

        const z = window.zod || window.Zod;
        const Schema = z
          .object({
            givenName: z.string().trim().min(1, "Nama depan wajib diisi"),
            familyName: z.string().trim().min(1, "Nama belakang wajib diisi"),
            email: z
              .string()
              .trim()
              .min(1, "Email wajib diisi")
              .email("Format email tidak valid"),
            password: z.string().min(8, "Kata sandi minimal 8 karakter"),
            confirmPassword: z
              .string()
              .min(8, "Konfirmasi kata sandi minimal 8 karakter"),
          })
          .superRefine((val, ctx) => {
            if (val.password !== val.confirmPassword) {
              ctx.addIssue({
                code: z.ZodIssueCode.custom,
                path: ["confirmPassword"],
                message: "Konfirmasi kata sandi tidak cocok",
              });
            }
          });

        function setError(inputEl, errEl, msg) {
          if (!inputEl || !errEl) return;
          errEl.textContent = msg || "";
          errEl.classList.toggle("hidden", !msg);
          inputEl.setAttribute("aria-invalid", msg ? "true" : "false");
          inputEl.classList.toggle("border-red-300", !!msg);
          inputEl.classList.toggle("border-gray-300", !msg);
        }
        function clearAllErrors() {
          setError(givenName, errGiven, "");
          setError(familyName, errFamily, "");
          setError(email, errEmail, "");
          setError(password, errPass, "");
          setError(confirmPassword, errCPass, "");
          var capErr = document.getElementById("captcha-error");
          var capStat = document.getElementById("captcha-status");
          capErr && capErr.classList.add("hidden");
          capStat && capStat.classList.add("hidden");
          if (capErr) capErr.textContent = "";
          if (capStat) capStat.textContent = "";
        }

        // ===== Password Strength =====
        const labels = ["Sangat lemah", "Lemah", "Cukup", "Kuat"];
        function analyzePassword(pw) {
          const weaknesses = [];
          const hasLower = /[a-z]/.test(pw);
          const hasUpper = /[A-Z]/.test(pw);
          const hasDigit = /\d/.test(pw);
          const hasSymbol = /[^A-Za-z0-9]/.test(pw);
          const length = pw.length;

          if (length < 8) weaknesses.push("Tambahkan minimal 8 karakter");
          if (!hasLower) weaknesses.push("Tambahkan huruf kecil (a-z)");
          if (!hasUpper) weaknesses.push("Tambahkan huruf kapital (A-Z)");
          if (!hasDigit) weaknesses.push("Tambahkan angka (0-9)");
          if (!hasSymbol) weaknesses.push("Tambahkan simbol, misalnya @#.-*&^");

          let points = 0;
          if (length >= 8) points++;
          if (length >= 12) points++;
          if (hasLower && hasUpper) points++;
          if (hasDigit) points++;
          if (hasSymbol) points++;
          if (/^[A-Za-z]+$/.test(pw) || /^\d+$/.test(pw))
            points = Math.max(points - 1, 0);

          let step = 0;
          if (length > 0) {
            if (points <= 1) step = 1;
            else if (points === 2) step = 2;
            else if (points === 3) step = 3;
            else step = 4;
          }
          return { step, weaknesses };
        }

        function renderStrength(step, weaknesses) {
          if (!strengthSteps.length) return;
          strengthSteps.forEach((s) => {
            s.className = "step h-1.5 flex-1 rounded bg-gray-200";
          });
          const color =
            step === 1
              ? "bg-red-500"
              : step === 2
              ? "bg-orange-500"
              : step === 3
              ? "bg-yellow-500"
              : step === 4
              ? "bg-green-500"
              : "bg-gray-200";
          for (let i = 0; i < step; i++) {
            strengthSteps[i].classList.remove("bg-gray-200");
            strengthSteps[i].classList.add(color);
          }
          if (strengthLabel) {
            strengthLabel.textContent =
              step === 0
                ? "Kekuatan kata sandi: —"
                : `Kekuatan kata sandi: ${labels[step - 1]}`;
          }
          if (weaknessList) {
            weaknessList.innerHTML = "";
            if (step < 4 && weaknesses.length) {
              weaknesses.slice(0, 4).forEach((msg) => {
                const li = document.createElement("li");
                li.textContent = `• ${msg}`;
                weaknessList.appendChild(li);
              });
            }
          }
        }

        renderStrength(0, []);
        password &&
          password.addEventListener("input", () => {
            setError(password, errPass, "");
            const { step, weaknesses } = analyzePassword(password.value || "");
            renderStrength(step, weaknesses);
            if (
              confirmPassword &&
              confirmPassword.value.length &&
              password.value === confirmPassword.value
            ) {
              setError(confirmPassword, errCPass, "");
            }
          });

        givenName &&
          givenName.addEventListener("input", () =>
            setError(givenName, errGiven, "")
          );
        familyName &&
          familyName.addEventListener("input", () =>
            setError(familyName, errFamily, "")
          );
        email &&
          email.addEventListener("input", () => setError(email, errEmail, ""));
        confirmPassword &&
          confirmPassword.addEventListener("input", () => {
            setError(confirmPassword, errCPass, "");
            if (
              password &&
              password.value &&
              confirmPassword.value &&
              password.value !== confirmPassword.value
            ) {
              setError(
                confirmPassword,
                errCPass,
                "Konfirmasi kata sandi tidak cocok"
              );
            }
          });

        let submitting = false;
        form.addEventListener("submit", function (e) {
          e.preventDefault();
          if (submitting) return;

          // [NEW] Recompute: hormati gate captcha
          recomputeDisabled();
          if (!window.__PM_CAN_SUBMIT__) {
            var captchaErr = document.getElementById("captcha-error");
            if (
              window.__PM_TS_ENABLED__ &&
              !window.__PM_TS_OK__ &&
              captchaErr
            ) {
              captchaErr.textContent =
                "Harap selesaikan captcha terlebih dahulu.";
              captchaErr.classList.remove("hidden");
            }
            return;
          }

          // [NEW] Jika Turnstile aktif, pastikan token tersisip
          if (window.__PM_TS_ENABLED__) {
            var tokenInput = form.querySelector(
              'input[name="cf-turnstile-response"]'
            );
            var token = tokenInput ? tokenInput.value.trim() : "";
            if (!token) {
              var captchaErr2 = document.getElementById("captcha-error");
              if (captchaErr2) {
                captchaErr2.textContent =
                  "Token captcha tidak ditemukan. Silakan verifikasi ulang.";
                captchaErr2.classList.remove("hidden");
              }
              return;
            }
          }

          clearAllErrors();

          const data = {
            givenName: givenName ? givenName.value : "",
            familyName: familyName ? familyName.value : "",
            email: email ? email.value : "",
            password: password ? password.value : "",
            confirmPassword: confirmPassword ? confirmPassword.value : "",
          };

          const result = Schema.safeParse(data);
          if (!result.success) {
            const issues = result.error.issues;
            const firstByPath = (p) => issues.find((i) => i.path[0] === p);

            const g = firstByPath("givenName");
            const f = firstByPath("familyName");
            const eIssue = firstByPath("email");
            const p = firstByPath("password");
            const cp = firstByPath("confirmPassword");

            if (g) setError(givenName, errGiven, g.message);
            if (f) setError(familyName, errFamily, f.message);
            if (eIssue) setError(email, errEmail, eIssue.message);
            if (p) setError(password, errPass, p.message);
            if (cp) setError(confirmPassword, errCPass, cp.message);

            if (g) return givenName?.focus();
            if (f) return familyName?.focus();
            if (eIssue) return email?.focus();
            if (p) return password?.focus();
            if (cp) return confirmPassword?.focus();
            return;
          }

          const { step } = analyzePassword(password.value || "");
          if (step < 2) {
            setError(
              password,
              errPass,
              "Kata sandi terlalu lemah. Tingkatkan kekuatan kata sandi Anda."
            );
            return password.focus();
          }

          submitting = true;
          if (btn) {
            btn.disabled = true;
            btn.setAttribute("aria-busy", "true");
            btn.classList.add("opacity-75", "cursor-not-allowed");
            if (spinner) spinner.classList.remove("hidden");
            if (label) {
              btn.setAttribute("data-original-text", label.textContent || "");
              label.textContent = loadingText;
            }
          }

          requestAnimationFrame(() => form.submit());
        });

        window.addEventListener("pageshow", function (e) {
          if (!e.persisted) return;
          submitting = false;
          if (btn) {
            btn.disabled = false;
            btn.removeAttribute("aria-busy");
            btn.classList.remove("opacity-75", "cursor-not-allowed");
            if (spinner) spinner.classList.add("hidden");
            const original = btn.getAttribute("data-original-text");
            if (label && original != null) label.textContent = original;
          }
          // Pastikan state gate disinkronkan saat BFCache restore
          recomputeDisabled();
        });
      })();
    </script>
