                      data-target="confirmPassword"
                      aria-label="Tampilkan kata sandi"
                      aria-pressed="false"
                      title="Tampilkan kata sandi"
                    >
                      <svg
                        class="icon-eye h-5 w-5"
                        viewBox="0 0 24 24"
                        fill="none"
                        stroke="currentColor"
                        aria-hidden="true"
                      >
                        <path
                          stroke-width="1.8"
                          stroke-linecap="round"
                          stroke-linejoin="round"
                          d="M2.2 12.3a1 1 0 0 1 0-.6C3.8 7.4 7.6 4.5 12 4.5s8.2 2.9 9.8 7.2a1 1 0 0 1 0 .6C20.2 16.9 16.4 19.5 12 19.5S3.8 16.6 2.2 12.3z"
                        />
                        <circle cx="12" cy="12" r="3" stroke-width="1.8" />
                      </svg>
                      <svg
                        class="icon-eye-off h-5 w-5 hidden"
                        viewBox="0 0 24 24"
                        fill="none"
                        stroke="currentColor"
                        aria-hidden="true"
                      >
                        <path
                          stroke-width="1.8"
                          stroke-linecap="round"
                          stroke-linejoin="round"
                          d="M2.2 12.3a1 1 0 0 1 0-.6C3.8 7.4 7.6 4.5 12 4.5s8.2 2.9 9.8 7.2a1 1 0 0 1 0 .6C20.2 16.9 16.4 19.5 12 19.5S3.8 16.6 2.2 12.3z"
                        />
                        <circle cx="12" cy="12" r="3" stroke-width="1.8" />
                        <path
                          d="M4 20L20 4"
                          stroke-width="1.8"
                          stroke-linecap="round"
                        />
                      </svg>
                      <span class="sr-only">Toggle password visibility</span>
                    </button>
                  </div>
                  <p
                    id="confirmPassword-error"
                    class="mt-2 text-xs text-red-600 <%= errors?.confirmPassword ? '' : 'hidden' %>"
                  >
                    <%= errors?.confirmPassword || '' %>
                  </p>
                </div>
              </div>

              <!-- Meter kekuatan password -->
              <div id="pwd-strength" class="mt-2 w-full flex flex-col">
                <div class="flex items-center gap-1 w-full" aria-hidden="true">
                  <span class="step h-1.5 flex-1 rounded bg-gray-200"></span>
                  <span class="step h-1.5 flex-1 rounded bg-gray-200"></span>
                  <span class="step h-1.5 flex-1 rounded bg-gray-200"></span>
                  <span class="step h-1.5 flex-1 rounded bg-gray-200"></span>
                </div>
                <div
                  id="pwd-strength-label"
                  class="mt-1 text-xs text-gray-600"
                  aria-live="polite"
                >
                  Kekuatan kata sandi: —
                </div>
                <ul
