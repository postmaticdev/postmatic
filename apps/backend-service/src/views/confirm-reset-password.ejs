<!DOCTYPE html>
<html lang="id">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Setel Ulang Kata Sandi · Postmatic</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
    <link rel="manifest" href="/site.webmanifest" />
    <style>
      :root {
        --primary: oklch(51.59% 0.225 262.83);
        --primary-foreground: oklch(0.4911 0.225 262.83);
        --secondary: oklch(0.585 0.233 277.117);
        --secondary-foreground: oklch(0.5 0.233 277.117);
      }
      .bg-primary {
        background-color: var(--primary);
      }
      .bg-secondary {
        background-color: var(--secondary);
      }
      .bg-brand-gradient {
        background: linear-gradient(135deg, var(--primary), var(--secondary));
      }
      .ring-brand:focus {
        outline: none;
        box-shadow: 0 0 0 3px color-mix(in oklab, var(--primary) 60%, #ffffff);
      }
      button[disabled] {
        cursor: not-allowed;
        opacity: 0.75;
      }
    </style>
  </head>

  <body class="min-h-screen bg-gray-50">
    <div class="grid min-h-screen lg:grid-cols-2">
      <!-- Panel Kiri (Brand) -->
      <aside
        class="hidden lg:flex flex-col justify-between p-10 bg-brand-gradient text-white"
      >
        <div>
          <div class="flex items-center gap-3">
            <div
              class="h-12 w-12 rounded-2xl bg-white/15 backdrop-blur-sm flex items-center justify-center overflow-hidden"
            >
              <img
                src="/static/logo.png"
                alt="Postmatic"
                class="h-full w-full object-cover"
              />
            </div>
            <div class="text-2xl font-semibold tracking-tight">Postmatic</div>
          </div>

          <h1 class="mt-16 text-4xl font-semibold max-w-lg">
            Setel ulang kata sandi Anda.
          </h1>
          <p class="mt-4 text-white/90 max-w-xl">
            Buat kata sandi baru untuk menjaga akun Anda tetap aman. Tautan
            reset hanya berlaku untuk waktu terbatas.
          </p>

          <div class="mt-10 grid grid-cols-2 gap-4 max-w-xl">
            <div class="rounded-2xl bg-white/10 p-5">
              <p class="text-sm font-medium">Privasi</p>
              <p class="text-white/80 text-xs mt-1">
                Kami melindungi data pribadi Anda
              </p>
            </div>
            <div class="rounded-2xl bg-white/10 p-5">
              <p class="text-sm font-medium">Keamanan</p>
              <p class="text-white/80 text-xs mt-1">
                Sesi dan token tervalidasi
              </p>
            </div>
          </div>
        </div>

        <div class="text-white/80 text-sm">
          &copy; <%= new Date().getFullYear() %> Postmatic. Hak cipta dilindungi
          undang-undang.
        </div>
      </aside>

      <!-- Panel Kanan (Form) -->
      <main class="flex items-center justify-center p-6 sm:p-10">
        <div class="w-full max-w-md">
          <div class="bg-white shadow-xl rounded-2xl p-8">
            <div class="text-center">
              <div
                class="mx-auto h-12 w-12 rounded-2xl bg-primary flex items-center justify-center overflow-hidden"
              >
                <img
                  src="/static/logo.png"
                  alt="Postmatic"
                  class="h-full w-full object-cover"
                />
              </div>
              <h2 class="mt-5 text-2xl font-semibold text-gray-900">
                Reset Kata Sandi
              </h2>
            </div>

            <% if (typeof error !== 'undefined' && error) { %>
            <!-- Error global (termasuk error captcha dari server) -->
            <div
              class="mt-6 rounded-xl border border-red-200 bg-red-50 px-4 py-3 text-sm text-red-700 text-center"
            >
              <%= error %>
            </div>
            <% } %> <% if (validToken) { %>
            <div class="mt-4 text-center text-sm text-gray-600">
              <p>
                Hai <strong><%= name || 'pengguna' %></strong>, reset kata sandi
                untuk akun dengan email:
              </p>
              <p class="text-gray-900 font-semibold mt-1"><%= email %></p>
            </div>

            <% var _captchaErr = (typeof error !== 'undefined' && error &&
            /captcha/i.test(String(error))) ? String(error) : ''; %>

            <form
              class="mt-8 space-y-5"
              method="POST"
              action="/api/auth/page/reset-password/<%= resetPasswordToken %>"
              id="resetForm"
              novalidate
            >
              <input
                type="hidden"
                name="_csrf"
                value="<%= typeof csrfToken !== 'undefined' ? csrfToken : '' %>"
              />

              <div>
                <label
                  for="password"
                  class="block text-sm font-medium text-gray-700"
                  >Kata sandi baru</label
                >
                <div class="relative">
                  <input
                    id="password"
                    name="password"
                    type="password"
                    required
                    autocomplete="new-password"
                    class="mt-1 block w-full rounded-xl border <%= errors?.password ? 'border-red-300' : 'border-gray-300' %> bg-white px-3 pr-10 py-2 shadow-sm ring-brand"
                    aria-invalid="<%= errors?.password ? 'true' : 'false' %>"
                    aria-describedby="password-error pwd-strength-label"
                    placeholder="********"
                  />
                  <button
                    type="button"
                    class="absolute inset-y-0 right-0 flex items-center pr-3 text-gray-500 hover:text-gray-700 focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-offset-2"
                    style="--tw-ring-color: var(--secondary)"
                    data-toggle-password
                    data-target="password"
                    aria-label="Tampilkan kata sandi"
                    aria-pressed="false"
                    title="Tampilkan kata sandi"
                  >
                    <!-- eye -->
                    <svg
                      class="icon-eye h-5 w-5"
                      viewBox="0 0 24 24"
                      fill="none"
                      stroke="currentColor"
                      aria-hidden="true"
                    >
                      <path
                        stroke-width="1.8"
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        d="M2.2 12.3a1 1 0 0 1 0-.6C3.8 7.4 7.6 4.5 12 4.5s8.2 2.9 9.8 7.2a1 1 0 0 1 0 .6C20.2 16.9 16.4 19.5 12 19.5S3.8 16.6 2.2 12.3z"
                      />
                      <circle cx="12" cy="12" r="3" stroke-width="1.8" />
                    </svg>
                    <!-- eye-off -->
                    <svg
                      class="icon-eye-off h-5 w-5 hidden"
                      viewBox="0 0 24 24"
                      fill="none"
                      stroke="currentColor"
                      aria-hidden="true"
                    >
                      <path
                        stroke-width="1.8"
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        d="M2.2 12.3a1 1 0 0 1 0-.6C3.8 7.4 7.6 4.5 12 4.5s8.2 2.9 9.8 7.2a1 1 0 0 1 0 .6C20.2 16.9 16.4 19.5 12 19.5S3.8 16.6 2.2 12.3z"
                      />
                      <circle cx="12" cy="12" r="3" stroke-width="1.8" />
                      <path
                        d="M4 20L20 4"
                        stroke-width="1.8"
                        stroke-linecap="round"
                      />
                    </svg>
                    <span class="sr-only">Toggle password visibility</span>
                  </button>
                </div>
                <p
                  id="password-error"
                  class="mt-2 text-xs text-red-600 <%= errors?.password ? '' : 'hidden' %>"
                >
                  <%= errors?.password || '' %>
                </p>
              </div>

              <div>
                <label
                  for="confirmPassword"
                  class="block text-sm font-medium text-gray-700"
                  >Konfirmasi kata sandi</label
                >
                <div class="relative">
                  <input
                    id="confirmPassword"
                    name="confirmPassword"
                    type="password"
                    required
                    autocomplete="new-password"
                    class="mt-1 block w-full rounded-xl border <%= errors?.confirmPassword ? 'border-red-300' : 'border-gray-300' %> bg-white px-3 pr-10 py-2 shadow-sm ring-brand"
                    aria-invalid="<%= errors?.confirmPassword ? 'true' : 'false' %>"
                    aria-describedby="confirmPassword-error"
                    placeholder="********"
                  />
                  <button
                    type="button"
                    class="absolute inset-y-0 right-0 flex items-center pr-3 text-gray-500 hover:text-gray-700 focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-offset-2"
                    style="--tw-ring-color: var(--secondary)"
                    data-toggle-password
                    data-target="confirmPassword"
                    aria-label="Tampilkan kata sandi"
                    aria-pressed="false"
                    title="Tampilkan kata sandi"
                  >
                    <svg
                      class="icon-eye h-5 w-5"
                      viewBox="0 0 24 24"
                      fill="none"
                      stroke="currentColor"
                      aria-hidden="true"
                    >
                      <path
                        stroke-width="1.8"
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        d="M2.2 12.3a1 1 0 0 1 0-.6C3.8 7.4 7.6 4.5 12 4.5s8.2 2.9 9.8 7.2a1 1 0 0 1 0 .6C20.2 16.9 16.4 19.5 12 19.5S3.8 16.6 2.2 12.3z"
                      />
                      <circle cx="12" cy="12" r="3" stroke-width="1.8" />
                    </svg>
                    <svg
                      class="icon-eye-off h-5 w-5 hidden"
                      viewBox="0 0 24 24"
                      fill="none"
                      stroke="currentColor"
                      aria-hidden="true"
                    >
                      <path
                        stroke-width="1.8"
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        d="M2.2 12.3a1 1 0 0 1 0-.6C3.8 7.4 7.6 4.5 12 4.5s8.2 2.9 9.8 7.2a1 1 0 0 1 0 .6C20.2 16.9 16.4 19.5 12 19.5S3.8 16.6 2.2 12.3z"
                      />
                      <circle cx="12" cy="12" r="3" stroke-width="1.8" />
                      <path
                        d="M4 20L20 4"
                        stroke-width="1.8"
                        stroke-linecap="round"
                      />
                    </svg>
                    <span class="sr-only">Toggle password visibility</span>
                  </button>
                </div>
                <p
                  id="confirmPassword-error"
                  class="mt-2 text-xs text-red-600 <%= errors?.confirmPassword ? '' : 'hidden' %>"
                >
                  <%= errors?.confirmPassword || '' %>
                </p>
              </div>

              <!-- Meter kekuatan password -->
              <div id="pwd-strength" class="mt-2 w-full flex flex-col">
                <div class="flex items-center gap-1 w-full" aria-hidden="true">
                  <span class="step h-1.5 flex-1 rounded bg-gray-200"></span>
                  <span class="step h-1.5 flex-1 rounded bg-gray-200"></span>
                  <span class="step h-1.5 flex-1 rounded bg-gray-200"></span>
                  <span class="step h-1.5 flex-1 rounded bg-gray-200"></span>
                </div>
                <div
                  id="pwd-strength-label"
                  class="mt-1 text-xs text-gray-600"
                  aria-live="polite"
                >
                  Kekuatan kata sandi: —
                </div>
                <ul
                  id="pwd-weakness-list"
                  class="mt-1 text-xs text-gray-500 space-y-1"
                ></ul>
              </div>

              <p
                id="captcha-error"
                class="mt-2 text-xs text-red-600 <%= _captchaErr ? '' : 'hidden' %>"
              >
                <%= _captchaErr %>
              </p>
              <p
                id="captcha-status"
                class="mt-2 text-sm text-green-600 hidden"
              ></p>

              <!-- Turnstile (di dalam form agar input hidden tersisip) -->
              <% if (TURNSTILE_ENABLED) { %>
              <div class="w-full flex items-center justify-center">
                <div
                  class="cf-turnstile"
                  data-sitekey="<%= TURNSTILE_SITE_KEY %>"
                  data-theme="auto"
                  data-callback="pmOnTsOk"
                  data-error-callback="pmOnTsErr"
                  data-expired-callback="pmOnTsExp"
                ></div>
              </div>
              <script
                src="https://challenges.cloudflare.com/turnstile/v0/api.js"
                async
                defer
              ></script>
              <% } %>

              <button
                type="submit"
                id="resetSubmitBtn"
                data-loading-text="Menyimpan kata sandi..."
                class="w-full rounded-xl bg-brand-gradient py-2.5 text-white font-medium shadow hover:opacity-95 transition focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-offset-2"
                style="--tw-ring-color: var(--secondary)"
              >
                <span class="inline-flex items-center justify-center gap-2">
                  <svg
                    class="spinner hidden animate-spin h-5 w-5 text-white"
                    viewBox="0 0 24 24"
                    aria-hidden="true"
                  >
                    <circle
                      class="opacity-25"
                      cx="12"
                      cy="12"
                      r="10"
                      stroke="currentColor"
                      stroke-width="4"
                      fill="none"
                    ></circle>
                    <path
                      class="opacity-75"
                      fill="currentColor"
                      d="M4 12a8 8 0 018-8v3.5a4.5 4.5 0 00-4.5 4.5H4z"
                    ></path>
                  </svg>
                  <span class="btn-label">Atur Kata Sandi Baru</span>
                </span>
              </button>
            </form>
            <% } else { %>
            <!-- Token invalid -->
            <div
              class="mt-6 rounded-xl border border-yellow-200 bg-yellow-50 px-4 py-3 text-sm text-yellow-800 text-center"
            >
              Tautan reset kata sandi tidak valid atau telah kedaluwarsa.
              Silakan minta tautan baru.
            </div>
            <div class="mt-6 text-center">
              <a
                href="/api/auth/page/login"
                class="font-medium text-gray-900 hover:underline text-sm"
                >Kembali ke halaman Login</a
              >
            </div>
            <% } %>
          </div>

          <!-- Footer -->
          <footer class="mt-6 text-center text-xs text-gray-500">
            <a
              class="hover:underline"
              href="<%= LANDINGPAGE_URL %>/cookie-policy"
              >Kebijakan Cookie</a
            >
            ·
            <a
              class="hover:underline"
              href="<%= LANDINGPAGE_URL %>/data-deletion"
              >Penghapusan Data</a
            >
            ·
            <a
              class="hover:underline"
              href="<%= LANDINGPAGE_URL %>/privacy-policy"
              >Kebijakan Privasi</a
            >
            ·
            <a
              class="hover:underline"
              href="<%= LANDINGPAGE_URL %>/terms-of-service"
              >Syarat Layanan</a
            >
          </footer>
        </div>
      </main>
    </div>

    <!-- Turnstile callbacks + GATE (disable tombol sampai verifikasi) -->
    <script nonce="<%= cspNonce %>">
      (function () {
        var errEl = document.getElementById("captcha-error");
        var statEl = document.getElementById("captcha-status");

        function showErr(msg) {
          if (statEl) { statEl.textContent = ""; statEl.classList.add("hidden"); }
          if (errEl) { errEl.textContent = msg || "Captcha tidak valid."; errEl.classList.remove("hidden"); }
        }
        function showOk(msg) {
          if (errEl) { errEl.textContent = ""; errEl.classList.add("hidden"); }
          if (statEl) { statEl.textContent = msg || "Captcha terverifikasi."; statEl.classList.remove("hidden"); }
        }

        // === Gate flags ===
        window.__PM_TS_ENABLED__ = <%- JSON.stringify(!!TURNSTILE_ENABLED) %>;
        window.__PM_TS_OK__ = !window.__PM_TS_ENABLED__; // jika captcha tidak diaktifkan, anggap OK

        function recomputeIfReady(){ if (typeof window.__pmRecompute === "function") window.__pmRecompute(); }

        // dipanggil oleh widget
        window.pmOnTsOk  = function () { window.__PM_TS_OK__ = true;  showOk();  recomputeIfReady(); };
        window.pmOnTsErr = function () { window.__PM_TS_OK__ = false; showErr("Captcha gagal dimuat. Silakan muat ulang atau coba lagi."); recomputeIfReady(); };
        window.pmOnTsExp = function () { window.__PM_TS_OK__ = false; showErr("Captcha kedaluwarsa. Silakan selesaikan ulang captcha."); recomputeIfReady(); };

        // Safety: jika 6 detik tidak ada token, beri pesan
        if (window.__PM_TS_ENABLED__) {
          setTimeout(function () {
            if (!window.__PM_TS_OK__) showErr("Captcha belum diverifikasi. Selesaikan captcha untuk melanjutkan.");
          }, 6000);
        }
      })();
    </script>

    <!-- Toggle password -->
    <script nonce="<%= cspNonce %>">
      (function () {
        const labels = {
          show: "Tampilkan kata sandi",
          hide: "Sembunyikan kata sandi",
        };
        document.querySelectorAll("[data-toggle-password]").forEach((btn) => {
          const targetId = btn.getAttribute("data-target");
          const input = document.getElementById(targetId);
          if (!input) return;
          btn.addEventListener("click", () => {
            input.type = input.type === "password" ? "text" : "password";
            const visible = input.type === "text";
            btn.setAttribute("aria-pressed", String(visible));
            btn.setAttribute("aria-label", visible ? labels.hide : labels.show);
            btn.title = visible ? labels.hide : labels.show;
            const eye = btn.querySelector(".icon-eye");
            const eyeOff = btn.querySelector(".icon-eye-off");
            if (eye && eyeOff) {
              eye.classList.toggle("hidden", visible);
              eyeOff.classList.toggle("hidden", !visible);
            }
          });
        });
      })();
    </script>

    <!-- Zod + validasi + loading + password strength + CAPTCHA GATE -->
    <script src="https://cdn.jsdelivr.net/npm/zod@3.23.8/lib/index.umd.min.js"></script>
    <script nonce="<%= cspNonce %>">
      (function () {
        const form = document.getElementById("resetForm");
        if (!form) return; // tidak ada form ketika token invalid

        const btn = document.getElementById("resetSubmitBtn");
        const spinner = btn ? btn.querySelector(".spinner") : null;
        const label = btn ? btn.querySelector(".btn-label") : null;
        const loadingText =
          (btn && btn.getAttribute("data-loading-text")) ||
          "Menyimpan kata sandi...";

        const password = document.getElementById("password");
        const confirmPassword = document.getElementById("confirmPassword");
        const errPass = document.getElementById("password-error");
        const errCPass = document.getElementById("confirmPassword-error");

        const strengthWrap = document.getElementById("pwd-strength");
        const strengthSteps = strengthWrap
          ? Array.from(strengthWrap.querySelectorAll(".step"))
          : [];
        const strengthLabel = document.getElementById("pwd-strength-label");
        const weaknessList = document.getElementById("pwd-weakness-list");

        // ===== CAPTCHA GATE (disable tombol sampai verifikasi) =====
        function setBtn(disabled) {
          if (!btn) return;
          btn.disabled = disabled;
          btn.classList.toggle("opacity-75", disabled);
          btn.classList.toggle("cursor-not-allowed", disabled);
          if (disabled) btn.setAttribute("aria-disabled", "true");
          else btn.removeAttribute("aria-disabled");
        }
        function recomputeDisabled() {
          var lockByCaptcha =
            !!window.__PM_TS_ENABLED__ && !window.__PM_TS_OK__;
          var disabled = !!lockByCaptcha;
          setBtn(disabled);
          window.__PM_CAN_SUBMIT__ = !disabled;
        }
        window.__pmRecompute = recomputeDisabled; // dipanggil oleh callbacks Turnstile
        recomputeDisabled(); // initial

        // ===== Validasi (Zod) =====
        const z = window.zod || window.Zod;
        const Schema = z
          .object({
            password: z.string().min(8, "Kata sandi minimal 8 karakter"),
            confirmPassword: z
              .string()
              .min(8, "Konfirmasi kata sandi minimal 8 karakter"),
          })
          .superRefine((val, ctx) => {
            if (val.password !== val.confirmPassword) {
              ctx.addIssue({
                code: z.ZodIssueCode.custom,
                path: ["confirmPassword"],
                message: "Konfirmasi kata sandi tidak cocok",
              });
            }
          });

        function setError(inputEl, errEl, msg) {
          if (!inputEl || !errEl) return;
          errEl.textContent = msg || "";
          errEl.classList.toggle("hidden", !msg);
          inputEl.setAttribute("aria-invalid", msg ? "true" : "false");
          inputEl.classList.toggle("border-red-300", !!msg);
          inputEl.classList.toggle("border-gray-300", !msg);
        }
        function clearAllErrors() {
          setError(password, errPass, "");
          setError(confirmPassword, errCPass, "");
          var capErr = document.getElementById("captcha-error");
          var capStat = document.getElementById("captcha-status");
          capErr && capErr.classList.add("hidden");
          capStat && capStat.classList.add("hidden");
          if (capErr) capErr.textContent = "";
          if (capStat) capStat.textContent = "";
        }

        // ===== Password strength meter =====
        const labels = ["Sangat lemah", "Lemah", "Cukup", "Kuat"];
        function analyzePassword(pw) {
          const weaknesses = [];
          const hasLower = /[a-z]/.test(pw);
          const hasUpper = /[A-Z]/.test(pw);
          const hasDigit = /\d/.test(pw);
          const hasSymbol = /[^A-Za-z0-9]/.test(pw);
          const length = pw.length;

          if (length < 8) weaknesses.push("Tambahkan minimal 8 karakter");
          if (!hasLower) weaknesses.push("Tambahkan huruf kecil (a-z)");
          if (!hasUpper) weaknesses.push("Tambahkan huruf kapital (A-Z)");
          if (!hasDigit) weaknesses.push("Tambahkan angka (0-9)");
          if (!hasSymbol) weaknesses.push("Tambahkan simbol, misalnya @#.-*&^");

          let points = 0;
          if (length >= 8) points++;
          if (length >= 12) points++;
          if (hasLower && hasUpper) points++;
          if (hasDigit) points++;
          if (hasSymbol) points++;
          if (/^[A-Za-z]+$/.test(pw) || /^\d+$/.test(pw))
            points = Math.max(points - 1, 0);

          let step = 0;
          if (length > 0) {
            if (points <= 1) step = 1;
            else if (points === 2) step = 2;
            else if (points === 3) step = 3;
            else step = 4;
          }
          return { step, weaknesses };
        }

        function renderStrength(step, weaknesses) {
          if (!strengthSteps.length) return;
          strengthSteps.forEach(
            (s) => (s.className = "step h-1.5 flex-1 rounded bg-gray-200")
          );
          const color =
            step === 1
              ? "bg-red-500"
              : step === 2
              ? "bg-orange-500"
              : step === 3
              ? "bg-yellow-500"
              : step === 4
              ? "bg-green-500"
              : "bg-gray-200";
          for (let i = 0; i < step; i++) {
            strengthSteps[i].classList.remove("bg-gray-200");
            strengthSteps[i].classList.add(color);
          }
          if (strengthLabel) {
            strengthLabel.textContent =
              step === 0
                ? "Kekuatan kata sandi: —"
                : `Kekuatan kata sandi: ${labels[step - 1]}`;
          }
          if (weaknessList) {
            weaknessList.innerHTML = "";
            if (step < 4 && weaknesses.length) {
              weaknesses.slice(0, 4).forEach((msg) => {
                const li = document.createElement("li");
                li.textContent = `• ${msg}`;
                weaknessList.appendChild(li);
              });
            }
          }
        }

        renderStrength(0, []);
        password?.addEventListener("input", () => {
          setError(password, errPass, "");
          const { step, weaknesses } = analyzePassword(password.value || "");
          renderStrength(step, weaknesses);
          if (
            confirmPassword &&
            confirmPassword.value.length &&
            password.value === confirmPassword.value
          ) {
            setError(confirmPassword, errCPass, "");
          }
        });
        confirmPassword?.addEventListener("input", () => {
          setError(confirmPassword, errCPass, "");
          if (
            password &&
            password.value &&
            confirmPassword.value &&
            password.value !== confirmPassword.value
          ) {
            setError(
              confirmPassword,
              errCPass,
              "Konfirmasi kata sandi tidak cocok"
            );
          }
        });

        // ===== Submit =====
        let submitting = false;
        form.addEventListener("submit", function (e) {
          e.preventDefault();
          if (submitting) return;

          // Gate: hormati captcha
          recomputeDisabled();
          if (!window.__PM_CAN_SUBMIT__) {
            if (!!window.__PM_TS_ENABLED__ && !window.__PM_TS_OK__) {
              var capErr = document.getElementById("captcha-error");
              if (capErr) {
                capErr.textContent =
                  "Harap selesaikan captcha terlebih dahulu.";
                capErr.classList.remove("hidden");
              }
            }
            return;
          }

          // Pastikan token Turnstile tersisip (jika aktif)
          if (window.__PM_TS_ENABLED__) {
            var tokenInput = form.querySelector(
              'input[name="cf-turnstile-response"]'
            );
            var token = tokenInput ? tokenInput.value.trim() : "";
            if (!token) {
              var capErr2 = document.getElementById("captcha-error");
              if (capErr2) {
                capErr2.textContent =
                  "Token captcha tidak ditemukan. Silakan verifikasi ulang.";
                capErr2.classList.remove("hidden");
              }
              return;
            }
          }

          clearAllErrors();

          const data = {
            password: password ? password.value : "",
            confirmPassword: confirmPassword ? confirmPassword.value : "",
          };
          const result = Schema.safeParse(data);

          if (!result.success) {
            const issues = result.error.issues;
            const firstByPath = (p) => issues.find((i) => i.path[0] === p);
            const p = firstByPath("password");
            const cp = firstByPath("confirmPassword");
            if (p) setError(password, errPass, p.message);
            if (cp) setError(confirmPassword, errCPass, cp.message);
            if (p) return password?.focus();
            if (cp) return confirmPassword?.focus();
            return;
          }

          // optional: tolak strength < 2
          const { step } = analyzePassword(password.value || "");
          if (step < 2) {
            setError(
              password,
              errPass,
              "Kata sandi terlalu lemah. Tingkatkan kekuatan kata sandi Anda."
            );
            return password.focus();
          }

          // Loading state
          submitting = true;
          if (btn) {
            btn.disabled = true;
            btn.setAttribute("aria-busy", "true");
            btn.classList.add("opacity-75", "cursor-not-allowed");
            if (spinner) spinner.classList.remove("hidden");
            if (label) {
              btn.setAttribute("data-original-text", label.textContent || "");
              label.textContent = loadingText;
            }
          }

          requestAnimationFrame(() => form.submit());
        });

        // Pulihkan bila kembali via bfcache
        window.addEventListener("pageshow", function (e) {
          if (!e.persisted) return;
          submitting = false;
          if (btn) {
            btn.disabled = false;
            btn.removeAttribute("aria-busy");
            btn.classList.remove("opacity-75", "cursor-not-allowed");
            if (spinner) spinner.classList.add("hidden");
            const original = btn.getAttribute("data-original-text");
            if (label && original != null) label.textContent = original;
          }
          recomputeDisabled();
        });
      })();
    </script>
