{
  "name": "backend",
  "version": "1.0.0",
  "description": "Backend for Postmatic application",
  "main": "dist/index.js",
  "scripts": {
    "start": "node dist/index.js",
    "dev": "ts-node-dev --respawn --transpile-only --exit-child ./src/index.ts",
    "socket-client": "ts-node-dev --respawn --transpile-only --exit-child ./src/socket-client.ts",
    "build": "tsc --project tsconfig.json && cp -r src/public dist/public && cp -r src/views dist/views",
    "backup": "ts-node-dev --transpile-only --exit-child ./src/scripts/database/backup.ts",
    "restore": "ts-node-dev --transpile-only --exit-child ./src/scripts/database/restore.ts",
    "backup-app": "ts-node-dev --transpile-only --exit-child ./src/scripts/database/backup-app.ts",
    "restore-app": "ts-node-dev --transpile-only --exit-child ./src/scripts/database/restore-app.ts",
    "seed-template": "ts-node-dev --transpile-only --exit-child ./src/scripts/database/seed-template.ts",
    "spam": "ts-node-dev --transpile-only --exit-child ./src/scripts/spam.ts",
    "ngrok": "ngrok http 2001"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
