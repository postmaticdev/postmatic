                        class="icon-eye-off h-5 w-5 hidden"
                        viewBox="0 0 24 24"
                        fill="none"
                        stroke="currentColor"
                        aria-hidden="true"
                      >
                        <path
                          stroke-width="1.8"
                          stroke-linecap="round"
                          stroke-linejoin="round"
                          d="M2.2 12.3a1 1 0 0 1 0-.6C3.8 7.4 7.6 4.5 12 4.5s8.2 2.9 9.8 7.2a1 1 0 0 1 0 .6C20.2 16.9 16.4 19.5 12 19.5S3.8 16.6 2.2 12.3z"
                        />
                        <circle cx="12" cy="12" r="3" stroke-width="1.8" />
                        <path
                          d="M4 20L20 4"
                          stroke-width="1.8"
                          stroke-linecap="round"
                        />
                      </svg>
                      <span class="sr-only">Toggle password visibility</span>
                    </button>
                  </div>
                  <p
                    id="password-error"
                    class="mt-2 text-xs text-red-600 <%= errors?.password ? '' : 'hidden' %>"
                  >
                    <%= errors?.password || '' %>
                  </p>
                </div>

                <div>
                  <label
                    for="confirmPassword"
                    class="block text-sm font-medium text-gray-700"
                    >Konfirmasi kata sandi</label
                  >
                  <div class="relative">
                    <input
                      id="confirmPassword"
                      name="confirmPassword"
                      type="password"
                      required
                      autocomplete="new-password"
                      class="mt-1 block w-full rounded-xl border <%= errors?.confirmPassword ? 'border-red-300' : 'border-gray-300' %> bg-white px-3 pr-10 py-2 shadow-sm ring-brand"
                      aria-invalid="<%= errors?.confirmPassword ? 'true' : 'false' %>"
                      aria-describedby="confirmPassword-error"
                      placeholder="********"
                    />
                    <button
                      type="button"
                      class="absolute inset-y-0 right-0 flex items-center pr-3 text-gray-500 hover:text-gray-700 focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-offset-2"
                      style="--tw-ring-color: var(--secondary)"
